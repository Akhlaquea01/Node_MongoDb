{
  "name": "backend",
  "version": "1.0.0",
  "description": "a backend code",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=1024 tsc",
    "start": "cross-env NODE_OPTIONS=--max-old-space-size=1024 node -r dotenv/config dist/index.js",
    "dev": "cross-env NODE_OPTIONS=\"--import=tsx\" nodemon --watch \"src/**/*.ts\" --exec \"node\" src/index.ts",
    "workers:basic": "cross-env NODE_OPTIONS=\"--import=tsx\" node src/workers/example.ts",
    "workers:timing": "cross-env NODE_OPTIONS=\"--import=tsx\" node src/workers/timing-demo.ts",
    "workers:server:blocking": "cross-env NODE_OPTIONS=\"--import=tsx\" node src/workers/server-demo.ts --blocking",
    "workers:server:non-blocking": "cross-env NODE_OPTIONS=\"--import=tsx\" node src/workers/server-demo.ts --non-blocking",
    "workers:server:test": "cross-env NODE_OPTIONS=\"--import=tsx\" node src/workers/server-demo.ts --test",
    "cluster:basic": "cross-env NODE_OPTIONS=\"--import=tsx\" node src/cluster/basic-cluster.ts",
    "cluster:server": "cross-env NODE_OPTIONS=\"--import=tsx\" node src/cluster/server-demo.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "husky"
  },
  "keywords": [
    "javascript",
    "backend"
  ],
  "author": "Akhlaque Ahmad",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^0.6.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.2",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cloudinary": "^1.41.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "ics": "^3.8.1",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "mongoose": "^8.3.2",
    "mongoose-aggregate-paginate-v2": "^1.0.6",
    "multer": "^1.4.5-lts.1",
    "node-media-server": "^4.0.21",
    "node-telegram-bot-api": "^0.65.1",
    "nodemailer": "^6.9.13",
    "ollama": "^0.5.12",
    "openai": "^4.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "socket.io": "^4.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^10.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.48.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
