    "/ics/generate": {
      "post": {
        "summary": "Generate ICS file with custom events",
        "tags": [
          "ICS"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": [
                "config",
                "activities"
              ],
              "properties": {
                "config": {
                  "type": "object",
                  "required": [
                    "year",
                    "month"
                  ],
                  "properties": {
                    "year": {
                      "type": "integer",
                      "description": "Year for the calendar"
                    },
                    "month": {
                      "type": "integer",
                      "description": "Month for the calendar (1-12)"
                    },
                    "startDay": {
                      "type": "integer",
                      "description": "Starting day of the month"
                    },
                    "endDay": {
                      "type": "integer",
                      "description": "Ending day of the month"
                    },
                    "timezone": {
                      "type": "string",
                      "description": "Timezone (e.g., 'America/New_York')"
                    },
                    "filename": {
                      "type": "string",
                      "description": "Custom filename for the ICS file"
                    }
                  }
                },
                "activities": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [
                      "title",
                      "startHour",
                      "startMinute",
                      "duration",
                      "description"
                    ],
                    "properties": {
                      "title": {
                        "type": "string",
                        "description": "Activity title"
                      },
                      "startHour": {
                        "type": "integer",
                        "description": "Start hour (0-23)"
                      },
                      "startMinute": {
                        "type": "integer",
                        "description": "Start minute (0-59)"
                      },
                      "duration": {
                        "type": "object",
                        "properties": {
                          "hours": {
                            "type": "integer",
                            "description": "Duration in hours"
                          },
                          "minutes": {
                            "type": "integer",
                            "description": "Duration in minutes"
                          }
                        }
                      },
                      "description": {
                        "type": "string",
                        "description": "Activity description"
                      },
                      "color": {
                        "type": "string",
                        "description": "Event color"
                      },
                      "daysOfWeek": {
                        "type": "array",
                        "items": {
                          "type": "integer"
                        },
                        "description": "Days of week (0-6, Sunday-Saturday)"
                      },
                      "skipDays": {
                        "type": "array",
                        "items": {
                          "type": "integer"
                        },
                        "description": "Specific dates to skip (day of month)"
                      }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "ICS file generated successfully"
          },
          "400": {
            "description": "Config and activities array are required"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
